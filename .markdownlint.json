{
  "blank_line": false,
  "commands-show-output": false,
  "fenced-code-language": false,
  "first-line-h1": false,
  "MD013": {
    "line_length": 150,
    "tables": false
  },
  "MD034": false,
  "MD046": { "style": "fenced" },
  "MD049": false,
  "MD050": false,
  "no-duplicate-heading": {
    "siblings_only": true
  },
  "no-inline-html": {
    "allowed_elements": [
      "br",
      "details",
      "span",
      "summary"
    ]
  },
  "no-trailing-punctuation": {
    "punctuation": ".,;:!。，；：！"
  },
  "ol-prefix": false,
  "single-h1": false,
  "ul-style": false
}
